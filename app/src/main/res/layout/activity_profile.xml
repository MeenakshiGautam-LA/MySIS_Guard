<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/back_color"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:id="@+id/toolbar_title_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_10dp"
                android:src="@drawable/white_back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/twentyDip"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen_sp" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_color"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tenDip"
                    android:layout_marginTop="@dimen/fourty_dp"
                    android:layout_marginRight="@dimen/tenDip"
                    android:background="@color/white"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/tenDip"
                    app:cardElevation="@dimen/tenDip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/thirtyDp">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/seventy_dp"
                            android:text="Rajkumar Singh"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/fourteen_sp" />

                        <TextView
                            android:id="@+id/security"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/tenDip"
                            android:text="Security Guard  066520"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/tweelve_sp" />

                        <TextView
                            android:id="@+id/time_with_sis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/thirtyDp"
                            android:text="10 Years with SIS"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/twenty_sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/tenDip"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/badgesLinear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/twenty_four_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/badges"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp" />

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/badge_img"
                                        android:layout_width="@dimen/fifty_dp"
                                        android:layout_height="@dimen/fifty_dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="@dimen/tenDip"
                                        android:src="@drawable/badge_discipline"
                                        app:civ_border_color="@color/white"
                                        app:civ_border_width="2dp" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/badge_img1"
                                        android:layout_width="@dimen/fifty_dp"
                                        android:layout_height="@dimen/fifty_dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginLeft="@dimen/twentyDip"
                                        android:layout_marginTop="@dimen/tenDip"
                                        android:src="@drawable/badge_team_work"
                                        app:civ_border_color="@color/white"
                                        app:civ_border_width="2dp" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/badge_img2"
                                        android:layout_width="@dimen/fifty_dp"
                                        android:layout_height="@dimen/fifty_dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginLeft="@dimen/fourty_dp"
                                        android:layout_marginTop="@dimen/tenDip"
                                        android:src="@drawable/punctual_clock"
                                        app:civ_border_color="@color/white"
                                        app:civ_border_width="2dp" />
                                </FrameLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="3.5"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/twenty_four_sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/rating"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp" />

                                <RatingBar
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/twentyDip"
                                    android:numStars="5"
                                    android:rating="3"
                                    android:saveEnabled="true"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBar" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/two_hundred_fifty_dp"
                    android:background="@color/whiteDark">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_number_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tenDip"
                        android:layout_marginTop="@dimen/hundred_thirty_five_dp"
                        android:layout_marginRight="@dimen/tenDip"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/tenDip"
                        app:cardElevation="@dimen/twentyDip">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/tenDip">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:text="@string/contact"
                                android:textColor="@color/text_color_hint"
                                android:textSize="@dimen/eighteen_sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/tenDip"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/tenDip">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/twenty_fourDp"
                                        android:layout_height="@dimen/twenty_fourDp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:src="@drawable/contact" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:text="+91 1234567890"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/tenDip"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/contact_change_btn"
                                        android:layout_width="@dimen/hundred_dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/background_border_app_bg"
                                        android:gravity="center"
                                        android:text="@string/change"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/tweelve_sp" />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/security_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/contact_number_card_view"
                        android:layout_marginLeft="@dimen/tenDip"
                        android:layout_marginTop="@dimen/twentyDip"
                        android:layout_marginRight="@dimen/tenDip"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/tenDip"
                        app:cardElevation="@dimen/twentyDip">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/tenDip">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:text="@string/security"
                                android:textColor="@color/text_color_hint"
                                android:textSize="@dimen/eighteen_sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/tenDip"
                                android:orientation="horizontal"
                                android:paddingBottom="@dimen/tenDip">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/twenty_fourDp"
                                        android:layout_height="@dimen/twenty_fourDp"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:src="@drawable/pin" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:text="PIN"
                                        android:textStyle="bold"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_size_14sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/tenDip"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/pin_change_btn"
                                        android:layout_width="@dimen/hundred_dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/background_border_app_bg"
                                        android:gravity="center"
                                        android:text="@string/change"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/tweelve_sp" />
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/bank_accounty_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/security_card_view"
                        android:layout_marginLeft="@dimen/tenDip"
                        android:layout_marginTop="@dimen/twentyDip"
                        android:layout_marginRight="@dimen/tenDip"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/tenDip"
                        app:cardElevation="@dimen/twentyDip">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/fifteen_dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:text="@string/bank_account"
                                android:textColor="@color/text_color_hint"
                                android:textSize="@dimen/eighteen_sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/tenDip"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/thirtyDp"
                                    android:layout_height="@dimen/thirtyDp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:src="@drawable/ic_launcher_background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:gravity="center"
                                    android:text="HDFC BANK"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="@dimen/tweelve_sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/account_holder_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/fifty_dp"
                                android:text="Rajkumar Singh"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/tweelve_sp" />

                            <TextView
                                android:id="@+id/back_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/fifty_dp"
                                android:text="A/C 213456788"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/tweelve_sp" />

                            <TextView
                                android:id="@+id/bank_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/fifty_dp"
                                android:text="Branch Nehru Place, New Delhi"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/tweelve_sp" />

                            <TextView
                                android:id="@+id/ifsc_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/fifty_dp"
                                android:text="IFSC CODE HDFC000106"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/tweelve_sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/document_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bank_accounty_card_view"
                        android:layout_marginLeft="@dimen/tenDip"
                        android:layout_marginTop="@dimen/twentyDip"
                        android:layout_marginRight="@dimen/tenDip"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/tenDip"
                        app:cardElevation="@dimen/twentyDip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:text="@string/document"
                                android:textColor="@color/text_color_hint"
                                android:textSize="@dimen/eighteen_sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/document_recycle_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:layout_marginTop="@dimen/tenDip"
                                android:layout_marginRight="@dimen/tenDip"
                                android:paddingBottom="@dimen/fifteen_dp"
                                android:scrollbars="vertical"
                                tools:listitem="@layout/single_document_layout" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/twentyDip"
                        android:layout_below="@+id/document_card_view" />

                </RelativeLayout>

            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_logo"
                android:layout_width="@dimen/hundred_fifteen_dp"
                android:layout_height="@dimen/hundred_fifteen_dp"
                android:layout_gravity="center|top"
                android:src="@drawable/profile_img"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

        </FrameLayout>
    </ScrollView>


</LinearLayout>