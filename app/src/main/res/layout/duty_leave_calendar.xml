<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previous_month_iv"
                android:layout_width="@dimen/fourty_twoDp"
                android:layout_height="@dimen/fourty_twoDp"
                android:layout_gravity="center"
                android:padding="@dimen/tenDip"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/month_name_tv"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/tenDip"
                android:text="Nov, 2019"
                android:textAllCaps="true"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/next_month_iv"
                android:layout_width="@dimen/fourty_twoDp"
                android:layout_height="@dimen/fourty_twoDp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/tenDip"
                android:src="@drawable/right_arrow" />
        </LinearLayout>


        <TextView
            android:id="@+id/viewLegendTV"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tenDip"
            android:gravity="right"
            android:text="@string/viewLegend"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tenDip"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/eight_dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginRight="@dimen/fiveDp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/fiveDp"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/all"
                    style="@style/regularText"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/fortten_sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fiveDp"
            android:layout_marginRight="@dimen/fiveDp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/fiveDp"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/presentCountTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    style="@style/regularText"
                    android:textColor="@color/leave_request_approved"
                    android:textSize="@dimen/fortten_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/present"
                    style="@style/boldText"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/fortten_sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fiveDp"
            android:layout_marginRight="@dimen/fiveDp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/fiveDp"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:id="@+id/totalLeaveLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_leave_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    style="@style/regularText"
                    android:textColor="@color/redPrimaryDarkColor"
                    android:textSize="@dimen/fortten_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/leave_txt"
                    style="@style/boldText"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/fortten_sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fiveDp"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/fiveDp"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/workingHourTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    style="@style/regularText"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/fortten_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:text="@string/extra_duty"
                    style="@style/boldText"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/fortten_sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/tenDip">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/tenDip"
            android:layout_marginRight="@dimen/ten_dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/fiveDp"
            app:cardElevation="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/tenDip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/day_monday"
                        style="@style/regularText"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        style="@style/regularText"
                        android:text="@string/day_tuesday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        style="@style/regularText"
                        android:text="@string/day_wednesday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/regularText"
                        android:padding="8dp"
                        android:text="@string/day_thursday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        style="@style/regularText"
                        android:padding="8dp"
                        android:text="@string/day_friday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        style="@style/regularText"
                        android:text="@string/day_saturday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="8dp"
                        style="@style/regularText"
                        android:text="@string/day_sunday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fortten_sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calenderRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/calendar_singal_day_layout" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>