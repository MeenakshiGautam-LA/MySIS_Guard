<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:alpha="0.7"
    android:background="@color/dialog_backGround_color"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cancelImg"
        android:layout_width="@dimen/thirtyDp"
        android:layout_marginRight="@dimen/fifteen_dp"
        android:layout_height="@dimen/thirtyDp"
        android:layout_alignParentRight="true"
        android:tint="@color/light_grey_txt_color"
        android:layout_marginTop="@dimen/fifty_dp"
        android:src="@drawable/cancel_grey_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/document_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_accounty_card_view"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/fifteen_dp"
            android:layout_marginLeft="@dimen/fifteen_dp"
            app:cardCornerRadius="@dimen/tenDip"
            app:cardElevation="@dimen/twentyDip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/thirtyDp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_logo"
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="@dimen/sixty_eight_dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/fifty_dp"
                    app:civ_border_width="@dimen/two_dp"
                    android:src="@drawable/right_tick_circle_success_svg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twentyDip"
                    android:text="@string/request_raise_successfully"
                    android:textColor="@color/text_color_heading"
                    android:textSize="@dimen/twelve_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fourty_dp"
                    android:text="@string/change_contact_number"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/tenDip"
                    android:text="1234567890"
                    android:textColor="@color/light_grey_txt_color"
                    android:id="@+id/mobile_number"
                    android:textSize="@dimen/twenty_eight_sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/contact_change_btn"
                    android:layout_width="@dimen/hundred_forty_five_dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fifty_dp"
                    android:background="@drawable/background_border_red_app_bg"
                    android:gravity="center"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>