<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="@color/app_update_dialog_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tenDip"
        android:elevation="@dimen/tenDip"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/five_dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fifteen_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/twentyDip">
                <TextView
                    style="@style/regularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/txt_app_update_available"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_20sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update_now_btn"
                    style="@style/mediumText"
                    android:layout_width="@dimen/hundred_fifty_dp"
                    android:layout_height="@dimen/fourty_dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:background="@drawable/background_border_red_app_bg"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:padding="@dimen/ten_dp"
                    android:text="@string/txt_update_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_16sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

