<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/mark_attendance_header" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFE1E1">


            <ImageView
                android:id="@+id/guard_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_guard" />

            <ImageView
                android:id="@+id/warning_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/guard_iv"
                android:src="@drawable/not_marked_icon" />

            <com.sisindia.mysis.activity.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:fontName="Roboto_Bold"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/warning_iv"
                android:text="Your Attendance not marked for today!"
                android:textColor="@color/red_color" />
        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/sixty_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/todayShiftDetailCV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/margin_right_10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/noTodayRosterTV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/hundred_dp"
                                android:text="@string/noToday_Roster"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/fourteen_sp"
                                android:textStyle="bold"
                                android:visibility="gone" />


                            <RelativeLayout
                                android:id="@+id/todayRosterLY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <com.sisindia.mysis.activity.CustomFontTextView
                                    android:id="@+id/current_dutyHeaderTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:text="@string/current_duty_txt"
                                    android:textColor="@color/light_grey_txt_color"
                                   app:fontName="Roboto_Italic"
                                    android:textSize="@dimen/txt_size_14sp"/>


                                <TextView
                                    android:id="@+id/todayShiftNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:background="@color/shift_bg_color"
                                    android:padding="@dimen/five_dp"
                                    android:textColor="@color/app_default_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <TextView
                                    android:id="@+id/unitNameTV"
                                    android:layout_width="@dimen/two_hundred_fifty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/current_dutyHeaderTV"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/postNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/unitNameTV"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/complete_Duty_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/unitNameTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/thirtyDP"
                                    android:textAllCaps="true"
                                    android:textColor="@color/red_Color"
                                    android:textSize="14dp"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/todayDateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/complete_Duty_TV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/fifteen_dp"
                                    android:paddingTop="@dimen/tenDip"
                                    android:textColor="@color/black"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/todayShiftStartTimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/todayDateTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="10:00"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/fourty_five_sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/lateAttendance_TV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/todayShiftStartTimeTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/red_Color"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/todayTimePeroidTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/todayDateTV"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="@dimen/fifteen_dp"
                                    android:layout_marginTop="@dimen/twentyDip"
                                    android:layout_toRightOf="@id/todayShiftStartTimeTV"
                                    android:gravity="center"
                                    android:text="A.M"
                                    android:textColor="@color/_light_black"
                                    android:textSize="@dimen/fourteen_sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/lateAttendance_TV"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingBottom="@dimen/ten_dp">

                                    <LinearLayout
                                        android:id="@+id/dutyInBTN"
                                        android:layout_width="120dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:background="@drawable/background_border_red_app_bg"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/lateAttendance_TV"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:layout_marginBottom="@dimen/tenDip"
                                            android:background="@drawable/background_border_red_app_bg"
                                            android:paddingLeft="30dp"
                                            android:paddingRight="30dp"
                                            android:textColor="@color/white"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/dutyInTV"
                                            style="@style/customEditTextSearch_12"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="Duty In"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/duty_INTime_TV"
                                            style="@style/customEditTextSearch_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/dutyOutBTN"
                                        android:layout_width="120dp"
                                        android:layout_height="50dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/twentyDip"
                                        android:background="@drawable/background_border_red_app_bg"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/lateAttendance_TV"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:layout_marginBottom="@dimen/tenDip"
                                            android:background="@drawable/background_border_red_app_bg"
                                            android:paddingLeft="30dp"
                                            android:paddingRight="30dp"
                                            android:textColor="@color/white"
                                            android:visibility="gone" />

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/lateAttendance_TV"
                                            android:layout_centerInParent="true"
                                            android:layout_marginLeft="@dimen/twentyDip"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:layout_marginBottom="@dimen/tenDip"
                                            android:layout_toRightOf="@id/dutyInBTN"
                                            android:background="@drawable/light_grey_round_background"
                                            android:enabled="false"
                                            android:paddingLeft="30dp"
                                            android:paddingRight="30dp"
                                            android:text="Duty Out"
                                            android:textColor="@color/text_color_hint"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/dutyOutTV"
                                            style="@style/customEditTextSearch_12"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="Duty Out"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/duty_OUTTime_TV"
                                            style="@style/customEditTextSearch_14"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:textColor="@color/black"
                                            android:visibility="gone" />

                                    </LinearLayout>

                                </LinearLayout>
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15dp"
                                android:background="#E8E8E8" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"

                                android:gravity="center_horizontal">


                                <ImageView
                                    android:id="@+id/location_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"

                                    android:src="@drawable/loc_red_icon" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/location_iv"
                                    android:text="Locate On Map"
                                    android:textAllCaps="true"
                                    android:textColor="@color/guard_bottom_red_bg"
                                    android:textSize="@dimen/sixteen_dp"

                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="14dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/noNextDayRosterTV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/seventy_dp"
                                android:text="@string/no_roster_nextday"
                                android:textColor="@color/text_color_heading"
                                android:textSize="@dimen/fourteen_sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/nextDayRosterRL"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/next_duty_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:text="Next Duty"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/nextDayShiftNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:background="@color/light_yellow"
                                    android:padding="@dimen/five_dp"
                                    android:textColor="@color/app_default_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <TextView
                                    android:id="@+id/nextDayUnitNameTV"
                                    android:layout_width="@dimen/two_hundred_fifty_dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/next_duty_txt"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:maxLines="2"
                                    android:singleLine="false"
                                    android:textAllCaps="false"
                                    android:textColor="@color/text_color_heading" />


                                <TextView
                                    android:id="@+id/nextDayPostNameTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nextDayUnitNameTV"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:textAllCaps="true"
                                    android:textColor="@color/text_color_hint"
                                    android:textSize="@dimen/fourteen_sp" />

                                <TextView
                                    android:id="@+id/nextDayDateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nextDayUnitNameTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/thirtyDP"
                                    android:text="Thursday"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp" />


                                <TextView
                                    android:id="@+id/nextDayShiftStartTimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nextDayDateTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="10:00"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/fourty_five_sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/nextDayTimePeroidTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/nextDayDateTV"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/fifteen_dp"
                                    android:layout_marginTop="@dimen/twentyDip"
                                    android:layout_toRightOf="@id/nextDayShiftStartTimeTV"
                                    android:text="A.M"
                                    android:textColor="@color/_light_black"
                                    android:textSize="@dimen/fourteen_sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:background="#59C7C7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="You recently earned 2 new badges"
                        android:textColor="@color/light_grey_txt_color" />


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/calendarCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/margin_right_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_light"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:text="Your Calendar"
                            android:textColor="@color/black"

                            />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <ImageView
                                android:id="@+id/cal_prev_arr_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/left_arrow" />


                            <TextView
                                android:id="@+id/date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/cal_prev_arr_iv"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="Feb 2020" />

                            <ImageView
                                android:id="@+id/cal_next_arr_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/date_tv"
                                android:src="@drawable/right_arrow" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/present_no_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20"
                                    android:textColor="#0FBE9C"
                                    android:textSize="28dp"
                                    android:textStyle="bold"

                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="Present"
                                    android:textColor="@color/black" />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/leave_no_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="#FF0004"
                                    android:textSize="28dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Leave"
                                    android:textColor="@color/black"

                                    />


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/extra_hr_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="10 hr"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="28dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Extra Duty"
                                    android:textColor="@color/black"

                                    />


                            </LinearLayout>


                        </LinearLayout>


                        <TextView
                            android:id="@+id/view_details_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="40dp"
                            android:paddingBottom="30dp"
                            android:text="@string/view_details_tv"
                            android:textAllCaps="true"
                            android:textColor="@color/guard_bottom_red_bg"
                            android:textSize="@dimen/sixteen_dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sec_guard_details_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/margin_right_10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/sec_guard_det_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/icon_guard" />

                        <TextView
                            android:id="@+id/sec_guard_det_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/roboto_medium"
                            android:paddingTop="@dimen/padding_10dp"
                            android:text="RajKumar Singh"
                            android:textColor="@color/light_grey_txt_color" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal">

                            <TextView
                                android:id="@+id/sec_guard_det_post_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_light"
                                android:text="Security Guard"
                                android:textColor="@color/light_grey_txt_color" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/roboto_light"
                                android:text="0566250"
                                android:textColor="@color/light_grey_txt_color" />
                        </LinearLayout>



                        <TextView
                            android:id="@+id/experirnce_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/padding_top_20dp"
                            android:text="10 Years with SIS"
                            android:textColor="#0C0C0C"
                            android:textStyle="bold" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
