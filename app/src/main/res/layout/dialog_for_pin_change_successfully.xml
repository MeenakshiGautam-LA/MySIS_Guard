<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="@color/dialog_backGround_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cancelImg"
        android:layout_width="@dimen/thirtyDp"
        android:layout_height="@dimen/thirtyDp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/fifty_dp"
        android:layout_marginRight="@dimen/twentyDip"
        android:src="@drawable/cancel_grey_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/document_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_accounty_card_view"
            android:layout_gravity="center"
            android:layout_margin="@dimen/twentyDip"
            android:background="@color/white"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/tenDip"
            app:cardElevation="@dimen/ten_sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/fifty_dp"
                android:paddingBottom="@dimen/fifty_dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_logo"
                    android:layout_width="@dimen/hundred_dp"
                    android:layout_height="@dimen/sixty_eight_dp"
                    android:layout_gravity="center|top"
                    android:src="@drawable/right_tick_circle_success_svg"
                    app:civ_border_width="2dp" />


                <TextView
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/fifteen_dp"
                    android:padding="@dimen/five_dp"
                    android:textColor="@color/text_color_heading"
                    android:textSize="@dimen/fourteen_sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>