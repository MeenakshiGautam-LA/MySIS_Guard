    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/wee_done_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="30dp"
                android:text="Well Done"
                android:textColor="#281F2D"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/attendancemarked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wee_done_txt"
                android:layout_centerHorizontal="true"

                android:text="Attendance Marked Successfully"
                android:textColor="#281F2D"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/attendancemarked"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circular_ring"
                android:padding="15dp"
                android:src="@drawable/circle_image" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top">


            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/circular_top_frame">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/icon_cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/icon_cross" />


                    <TextView
                        android:id="@+id/close_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/icon_cross"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="50dp"
                        android:text="Click to Close the Window"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />


                </RelativeLayout>

            </FrameLayout>


        </RelativeLayout>
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Attendance Marked Successfully"
        android:textColor="#695C70"
        android:textSize="18dp"
        android:visibility="gone" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:text="Ramesh singh"
        android:textColor="#281F2D"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Guard-SO"
        android:textColor="#A799B7"
        android:textSize="18dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/day_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            android:paddingTop="10dp"
            android:text="friday"
            android:textAllCaps="true"
            android:textColor="#281F2D"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date_monthtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/day_txt"
            android:paddingTop="10dp"
            android:text="7 FEB"
            android:textAllCaps="true"
            android:textColor="#281F2D"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/shift_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:text="ShiftA"
            android:textAllCaps="true"
            android:textColor="#695C70"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/shift_amtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shift_txt"
            android:paddingTop="10dp"
            android:text="08:00 A.M"
            android:textAllCaps="true"
            android:textColor="#A799B7"
            android:textSize="16dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/bank_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/shift_txt"
        android:paddingTop="10dp"
        android:text="Axis Bank DLE UNT 12345"
        android:textAllCaps="true"
        android:textColor="#A799B7"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:text="Post"
            android:textAllCaps="true"
            android:textColor="#695C70"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/post_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/post"
            android:paddingTop="10dp"
            android:text="Main Gate"
            android:textAllCaps="true"
            android:textColor="#A799B7"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/post_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/post_txt"
            android:paddingTop="10dp"
            android:text="Post Rank"
            android:textAllCaps="true"
            android:textColor="#A799B7"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/post_rank_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/post_rank"
            android:paddingTop="10dp"
            android:text="SO"
            android:textAllCaps="true"
            android:textColor="#695C70"
            android:textSize="16dp" />


    </RelativeLayout>

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#A799B7" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/duty_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duty in"
            android:textColor="#695C70"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/duty_in_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="7:45 A.M"
            android:textColor="#A799B7"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/latlng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Lat, Long"
            android:textColor="#695C70"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/latlng_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40.741895,-73.989308"
            android:textColor="#A799B7"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>
