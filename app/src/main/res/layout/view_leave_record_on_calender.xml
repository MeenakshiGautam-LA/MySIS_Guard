<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/weekName_TV"
            style="@style/regularText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:gravity="center"
            android:text="16 feb"
            android:textColor="@color/black_grey"
            android:textSize="@dimen/twelve_sp" />

        <TextView
            android:id="@+id/date_tv"
            style="@style/mediumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:gravity="center"
            android:paddingLeft="@dimen/fifteen_dp"
            android:paddingRight="@dimen/fifteen_dp"
            android:paddingBottom="@dimen/fifteen_dp"
            android:text="16 feb"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty_four_sp" />

        <ImageView
            android:id="@+id/cancelImg"
            android:layout_width="@dimen/thirtyDp"
            android:layout_height="@dimen/thirtyDp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/fifty_dp"
            android:layout_marginRight="@dimen/twentyDip"
            android:src="@drawable/cancel_grey_color"
            android:tint="@color/black"
            android:visibility="gone" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/leaveDescTV"
                        style="@style/customEditTextSearch_16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/tenDip"
                        android:text="@string/Leave_record"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/leaveCardDetailCV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/five_dp"
                        android:visibility="visible"
                        app:cardCornerRadius="@dimen/five_dp"
                        app:cardElevation="@dimen/tenDip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/un_sync_Des_LY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/un_sync_data"
                                android:orientation="horizontal"
                                android:padding="@dimen/five_dp">

                                <ImageView
                                    android:layout_width="@dimen/twentyFiveDip"
                                    android:layout_height="@dimen/twentyFiveDip"
                                    android:src="@drawable/no_image_found" />

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten_dp"
                                    android:text="Unsynced data"
                                    android:textColor="@color/red_Color"
                                    android:textSize="@dimen/twelve_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/ten_dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/leave_reason"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/leave_reasonTV"
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left_10dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/leave_date"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/leave_DateTV"
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left_10dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/leave_status"
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/leave_status_TV"
                                        style="@style/customEditTextSearch_14"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_left_10dp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        <Button
            android:id="@+id/sync_BTN"
            style="@style/mediumText"
            android:layout_width="124dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fourty_dp"
            android:layout_marginBottom="@dimen/fifteen_dp"
            android:background="@drawable/rectangular_btn"
            android:text="Sync Now"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/fortten_sp" />
    </LinearLayout>


</LinearLayout>