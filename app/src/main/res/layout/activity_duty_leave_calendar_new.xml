<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight_dp"
        android:layout_marginTop="@dimen/twentyDip"
        android:layout_marginRight="@dimen/eight_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previous_month_iv"
                android:layout_width="@dimen/fourty_twoDp"
                android:layout_height="@dimen/fourty_twoDp"
                android:layout_gravity="center"
                android:padding="@dimen/tenDip"
                android:src="@drawable/left_arrow"
                android:tint="@color/app_default_red_color" />

            <TextView
                android:id="@+id/month_name_tv"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/tenDip"
                android:text="Nov, 2019"
                android:textAllCaps="true"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/next_month_iv"
                android:layout_width="@dimen/fourty_twoDp"
                android:layout_height="@dimen/fourty_twoDp"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/tenDip"
                android:src="@drawable/right_arrow"
                android:tint="@color/app_default_red_color" />
        </LinearLayout>


        <TextView
            android:id="@+id/viewLegendTV"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/tenDip"
            android:gravity="right"
            android:text="@string/viewLegend"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirtyDp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/presentCountTV"
                style="@style/boldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_20sp" />

            <TextView
                style="@style/regularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Duties"
                android:textColor="@color/calender_text_color"
                android:textSize="@dimen/txt_size_12sp" />


        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#D9D9D9" />

        <LinearLayout
            android:id="@+id/totalLeaveLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/total_leave_txt"
                style="@style/boldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_20sp" />

            <TextView
                style="@style/regularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Leaves"
                android:textColor="@color/calender_text_color"
                android:textSize="@dimen/txt_size_12sp" />


        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="#D9D9D9" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/extraDuty_TV"
                style="@style/boldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_20sp" />

            <TextView
                style="@style/regularText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Duties"
                android:textColor="@color/calender_text_color"
                android:textSize="@dimen/txt_size_12sp" />


        </LinearLayout>


    </LinearLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:layout_marginTop="@dimen/twentyDip"
            android:layout_marginRight="@dimen/ten_dp"
            app:cardCornerRadius="@dimen/ten_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ten_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#CAF5DD" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:text="Duties"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#FFE1E1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:text="Past Leaves"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                    <ImageView

                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint=" #F6F27E" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="20dp"
                        android:text="Unsync data"
                        android:textColor="@color/black"
                        android:textSize="12dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:layout_width="@dimen/ten_dp"
                        android:layout_height="@dimen/ten_dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#FF0000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="@dimen/eight_dp"
                        android:text="Approved Leaves"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp" />

                    <ImageView
                        android:layout_width="@dimen/ten_dp"
                        android:layout_height="@dimen/ten_dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="@color/applied_leave" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/eight_dp"
                        android:layout_marginTop="@dimen/eight_dp"
                        android:text="Applied Leaves"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp" />


                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/tenDip">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_marginTop="@dimen/tenDip"
                android:layout_marginRight="@dimen/ten_dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/fiveDp"
                app:cardElevation="@dimen/ten_dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/tenDip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_monday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_tuesday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_wednesday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_thursday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_friday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_saturday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />

                        <TextView
                            style="@style/boldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/day_sunday"
                            android:textColor="@color/light_grey_txt_color"
                            android:textSize="@dimen/fortten_sp" />
                    </LinearLayout>
                    <!-- tools:listitem="@layout/calendar_singal_day_layout"-->

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calenderRv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/calendar_singal_day_layout" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

           <!-- <Button
                android:id="@+id/sync_BTN"
                style="@style/mediumText"
                android:layout_width="124dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/twentyDip"
                android:background="@drawable/rectangular_btn"
                android:text="Sync Now"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fortten_sp" />-->
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/sync_BTN"
        style="@style/mediumText"
        android:layout_width="124dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/twentyDip"
        android:background="@drawable/rectangular_btn"
        android:text="Sync Now"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/ten_dp"
        android:textSize="@dimen/fortten_sp" />

</LinearLayout>