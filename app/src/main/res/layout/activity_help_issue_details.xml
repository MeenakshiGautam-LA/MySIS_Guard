<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DDE6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/icon_back_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/icon_back_arrow" />

        <TextView
            android:id="@+id/did_not_receive_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_back_arrow"
            android:paddingLeft="20dp"
            android:text="Did not receive salary"

            android:textSize="20dp" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/did_not_receive_txt"
            android:paddingLeft="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="20dp"
            android:text="10 Jan, 10:48 AM"
            android:textColor="#A799B7"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/did_not_receive_txt"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:text="In Process"
            android:textColor="#FFA14E"
            android:textSize="18dp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/detail_correct_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_btn"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Details are Correct"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/detail_notcorrect_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/detail_correct_btn"
            android:background="@drawable/rectangular_btn"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Details are not Correct"
            android:textColor="#FFFFFF" />


    </RelativeLayout>


</RelativeLayout>
