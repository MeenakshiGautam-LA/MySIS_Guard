<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profileLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/gradient_red"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen_dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/fifteen_dp"
                android:layout_height="@dimen/fifteen_dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/arrow_white" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/tenDip"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame_layout"
                android:background="@drawable/gradient_red"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tenDip"
                        android:layout_marginTop="@dimen/fourty_dp"
                        android:layout_marginRight="@dimen/tenDip"
                        android:background="@color/white"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/tenDip"
                        app:cardElevation="@dimen/tenDip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/tenDip">

                            <TextView
                                android:id="@+id/userNameTV"
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/eightyDP"
                                android:textAllCaps="true"
                                android:textColor="@color/light_grey_txt_color"
                                android:textSize="@dimen/eighteen_sp" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_top_20dp">


                                <TextView
                                    android:id="@+id/postRankNameTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="true"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />


                                <ImageView
                                    android:layout_width="1dp"
                                    android:layout_height="15dp"
                                    android:layout_marginLeft="@dimen/five_dp"
                                    android:background="@color/light_grey_txt_color" />


                                <TextView
                                    android:id="@+id/regNoTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/five_dp"
                                    android:text="Error"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/timePeriodYearTV"
                                style="@style/regularText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/ten_dp"
                                android:text="aaaa"
                                android:textColor="@color/light_grey_txt_color"
                                android:textSize="@dimen/twenty_sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tenDip"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:id="@+id/badgesLinear"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/regularText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="0"
                                        android:textColor="@color/light_grey_txt_color"
                                        android:textSize="@dimen/twenty_eight_sp" />

                                    <TextView
                                        style="@style/regularText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/five_dp"
                                        android:text="@string/badges"
                                        android:textColor="@color/light_grey_txt_color"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/badge_img"
                                            android:layout_width="@dimen/fifty_dp"
                                            android:layout_height="@dimen/fifty_dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:src="@drawable/badge_discipline"
                                            app:civ_border_color="@color/white"
                                            app:civ_border_width="2dp" />

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/badge_img1"
                                            android:layout_width="@dimen/fifty_dp"
                                            android:layout_height="@dimen/fifty_dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginLeft="@dimen/twentyDip"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:src="@drawable/badge_team_work"
                                            app:civ_border_color="@color/white"
                                            app:civ_border_width="2dp" />

                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/badge_img2"
                                            android:layout_width="@dimen/fifty_dp"
                                            android:layout_height="@dimen/fifty_dp"
                                            android:layout_gravity="center|top"
                                            android:layout_marginLeft="@dimen/fourty_dp"
                                            android:layout_marginTop="@dimen/tenDip"
                                            android:src="@drawable/punctual_clock"
                                            app:civ_border_color="@color/white"
                                            app:civ_border_width="2dp" />
                                    </FrameLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/regularText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="3.5"
                                        android:textColor="@color/light_grey_txt_color"
                                        android:textSize="@dimen/twenty_eight_sp" />

                                    <TextView
                                        style="@style/regularText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/five_dp"
                                        android:text="@string/rating"
                                        android:textColor="@color/light_grey_txt_color"
                                        android:textSize="@dimen/fourteen_sp" />

                                    <RatingBar
                                        style="@style/Widget.AppCompat.RatingBar.Small"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/twentyDip"
                                        android:numStars="5"
                                        android:rating="3"
                                        android:saveEnabled="true"
                                        android:stepSize="0.5"
                                        android:theme="@style/RatingBar" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!--<TextView
                       android:layout_width="wrap_content"
                       android:layout_height="50dp"
                       android:text="jhhkhjk"
                       android:layout_marginTop="380dp"
                       android:textColor="@color/red_color"
                       />-->


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/two_hundred_fifty_dp"
                        android:background="@color/white_background">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginTop="@dimen/tenDip"
                            android:layout_marginRight="@dimen/margin_right_10dp"
                            app:cardCornerRadius="@dimen/ten_dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/base_unit_bg_color"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/padding_10dp"
                                    android:text="@string/txt_base_unit"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/txt_size_12sp" />


                                <TextView
                                    android:id="@+id/baseUnitName_TV"
                                    style="@style/boldText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/padding_left_10dp"
                                    android:paddingBottom="@dimen/ten_dp"
                                    android:textSize="@dimen/txt_size_14sp" />


                                <TextView
                                    android:id="@+id/baseUnitCode_TV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/padding_left_10dp"
                                    android:paddingBottom="@dimen/ten_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/txt_size_14sp" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="@dimen/ten_dp"
                                    android:background="@color/hor_line_bg_color" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_view_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_view_first"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginRight="@dimen/margin_right_10dp"
                            app:cardCornerRadius="@dimen/five_dp"
                            app:cardElevation="@dimen/ten_dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/ten_dp"
                                    android:paddingTop="@dimen/ten_dp"
                                    android:text="Additional Units"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/txt_size_12sp" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/additionalUnit_RV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/card_view_second"
                                    android:layout_marginTop="@dimen/five_dp"
                                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                   />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/contact_number_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/card_view_second"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginTop="@dimen/twentyDip"
                            android:layout_marginRight="@dimen/tenDip"
                            android:background="@color/white"
                            android:orientation="vertical"
                            app:cardCornerRadius="@dimen/tenDip"
                            app:cardElevation="@dimen/twentyDip">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/tenDip">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:text="@string/contact"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/txt_size_12sp" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:orientation="horizontal"
                                    android:paddingBottom="@dimen/tenDip">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="21dp"
                                            android:layout_height="@dimen/twenty_fourDp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/tenDip"
                                            android:src="@drawable/contact"
                                            android:tint="@color/black" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/contactNO_TV"
                                                style="@style/boldText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/tenDip"
                                                android:text="aaaa"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/txt_size_14sp" />

                                            <TextView
                                                android:id="@+id/pendingDescriptionTV"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/tenDip"
                                                android:layout_marginTop="@dimen/five_dp"
                                                android:textColor="@color/red_Color"
                                                android:textSize="@dimen/txt_size_12sp"
                                                android:visibility="gone" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/tenDip"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/contact_change_btn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/thirtyDP"
                                            android:layout_below="@id/lateAttendance_TV"
                                            android:background="@drawable/background_border_red_app_bg"
                                            android:paddingLeft="@dimen/thirtyDP"
                                            android:paddingRight="@dimen/thirtyDP"
                                            android:text="@string/change"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/tweelve_sp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/security_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/contact_number_card_view"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginTop="@dimen/twentyDip"
                            android:layout_marginRight="@dimen/tenDip"
                            android:background="@color/white"
                            android:orientation="vertical"
                            app:cardCornerRadius="@dimen/tenDip"
                            app:cardElevation="@dimen/twentyDip">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/tenDip">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:text="@string/security"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:orientation="horizontal"
                                    android:paddingBottom="@dimen/tenDip">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">


                                        <ImageView
                                            android:layout_width="@dimen/twenty_fourDp"
                                            android:layout_height="@dimen/twenty_fourDp"
                                            android:layout_marginLeft="@dimen/tenDip"
                                            android:src="@drawable/pin"
                                            android:tint="@color/black"

                                            />

                                        <TextView
                                            style="@style/boldText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="@dimen/tenDip"
                                            android:text="****"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/txt_size_14sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/tenDip"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatButton
                                            android:id="@+id/pin_change_btn"
                                            android:layout_width="wrap_content"
                                            android:layout_height="@dimen/thirtyDP"
                                            android:layout_below="@id/lateAttendance_TV"
                                            android:background="@drawable/background_border_red_app_bg"
                                            android:paddingLeft="@dimen/thirtyDP"
                                            android:paddingRight="@dimen/thirtyDP"
                                            android:text="@string/change"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/tweelve_sp" />

                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/bank_accounty_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/security_card_view"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginTop="@dimen/twentyDip"
                            android:layout_marginRight="@dimen/tenDip"
                            android:background="@color/white"
                            android:orientation="vertical"
                            app:cardCornerRadius="@dimen/tenDip"
                            app:cardElevation="@dimen/twentyDip">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/fifteen_dp">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/twentyDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:text="@string/bank_account"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/bank_logo_IV"
                                        android:layout_width="@dimen/thirtyDp"
                                        android:layout_height="@dimen/thirtyDp"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:src="@drawable/bank_logo" />

                                    <TextView
                                        android:id="@+id/bankNameTV"
                                        style="@style/boldText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/tenDip"
                                        android:gravity="center"
                                        android:text="HDFC BANK"
                                        android:textAllCaps="true"
                                        android:textColor="@color/text_color_sign_using_regis"
                                        android:textSize="@dimen/tweelve_sp" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/accountHolderNameTV"
                                    style="@style/regularText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/fifty_dp"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <TextView
                                    android:id="@+id/accountHolderNumberTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/fifty_dp"
                                    android:text=""
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp"

                                    />

                                <TextView
                                    android:id="@+id/bankAddressTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/fifty_dp"
                                    android:text=""
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />

                                <TextView
                                    android:id="@+id/ifsc_CodeTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/fifty_dp"
                                    android:text=""
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/document_card_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/bank_accounty_card_view"
                            android:layout_marginLeft="@dimen/tenDip"
                            android:layout_marginTop="@dimen/twentyDip"
                            android:layout_marginRight="@dimen/tenDip"
                            android:background="@color/white"
                            android:orientation="vertical"
                            app:cardCornerRadius="@dimen/tenDip"
                            app:cardElevation="@dimen/twentyDip">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:layout_marginTop="@dimen/tenDip"
                                    android:text="@string/document"
                                    android:textColor="@color/light_grey_txt_color"
                                    android:textSize="@dimen/tweelve_sp"

                                    />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/document_recycle_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
