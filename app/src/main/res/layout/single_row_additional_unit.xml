<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            style="@style/boldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_10dp"
            android:id="@+id/unitNameTV"
            android:paddingBottom="@dimen/ten_dp"
            android:padding="@dimen/ten_dp"
            android:text="IL and FS Environmental Infrastructure Services Limited"
            android:textSize="@dimen/txt_size_14sp" />

        <TextView
            style="@style/regularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_left_10dp"
            android:paddingBottom="@dimen/ten_dp"
            android:id="@+id/unit_code_tv"
            android:text="DLE-UNT017378"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:id="@+id/viewBorder"
            android:background="@color/hor_line_bg_color" />


    </LinearLayout>

</LinearLayout>