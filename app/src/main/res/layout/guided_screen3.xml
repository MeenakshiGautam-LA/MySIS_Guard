<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layoutLY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qr_code_op_bg"
    android:orientation="vertical"
    android:visibility="visible">

    <!-- android:background="@drawable/background_gredient"-->
    <!--    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:id="@+id/topLinearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:paddingBottom="@dimen/twentyDip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten_dp"

                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userImageCV"
                                android:layout_width="@dimen/fourtyDp"
                                android:layout_height="@dimen/fourtyDp"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:src="@drawable/profile_img"
                                app:civ_border_color="@color/white"

                                app:civ_border_width="@dimen/two_dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <View
                                    android:layout_width="@dimen/two_dp"
                                    android:layout_height="@dimen/ten_dp"
                                    android:background="@color/text_color_hint" />

                                <View
                                    android:layout_width="@dimen/two_dp"
                                    android:layout_height="@dimen/ten_dp"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:background="@color/text_color_hint" />

                                <View
                                    android:layout_width="@dimen/two_dp"
                                    android:layout_height="@dimen/ten_dp"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:background="@color/text_color_hint" />

                                <!--  android:background="@color/black"/>-->

                                <View
                                    android:layout_width="@dimen/two_dp"
                                    android:layout_height="@dimen/ten_dp"
                                    android:layout_marginTop="@dimen/five_dp"
                                    android:background="@color/text_color_hint" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/fourtyDp"
                                android:layout_height="@dimen/fourtyDp"
                                android:layout_marginLeft="@dimen/ten_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:src="@mipmap/location"
                                app:tint="@color/app_default_red_color" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:layout_marginTop="@dimen/ten_dp"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:gravity="left"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/userNameTV"
                                        style="@style/boldText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ramesh_singh"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fortten_sp" />

                                    <TextView
                                        android:id="@+id/dutyRankNameTV"
                                        style="@style/regularText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/threeDip"
                                        android:text="ABC562314"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/twelve_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.7"
                                    android:gravity="right"
                                    android:orientation="vertical"
                                    android:padding="@dimen/fifteen_dp">

                                    <ImageView
                                        android:id="@+id/cancel_IV"
                                        android:layout_width="@dimen/twentyFiveDip"
                                        android:layout_height="@dimen/twentyFiveDip"

                                        android:src="@drawable/icon_black_cross" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/fourty_dp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/unitNameTV"
                                    style="@style/mediumText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="@string/axis_bank"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fortten_sp" />

                                <TextView
                                    android:id="@+id/unitCodeTV"
                                    style="@style/regularText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/threeDip"
                                    android:ellipsize="end"
                                    android:maxLines="2"
                                    android:text="@string/main_gate_tv"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fortten_sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/threeDip"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/postNameTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/duty_rank"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:id="@+id/postRankTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/tenDip"
                                    android:text="@string/so_tv"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/threeDip"
                                    android:paddingBottom="@dimen/five_dp"
                                    android:text="@string/shift_name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />

                                <TextView
                                    android:id="@+id/shiftNameTV"
                                    style="@style/regularText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/five_dp"
                                    android:layout_marginTop="@dimen/threeDip"
                                    android:maxLines="2"
                                    android:paddingBottom="@dimen/five_dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/twelve_sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/odma_reg_tv"
                    style="@style/regularText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="Reg No"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/reg_no_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="PAT0000000"
                    android:textColor="@color/primary_txt_color"
                    android:textSize="@dimen/sixteen_sp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="Unit Code"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/fourteen_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unit_code_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="UNT-0000"
                    android:textColor="@color/primary_txt_color"
                    android:textSize="@dimen/sixteen_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="Unit Name"
                    android:textColor="@color/text_color_hint"
                    android:textSize="@dimen/tweelve_sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/unit_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10dp"
                    android:text="SIS Corporate office, Oklhla"
                    android:textColor="@color/primary_txt_color"
                    android:textSize="@dimen/sixteen_sp"
                    android:visibility="gone"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/lightText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:paddingRight="@dimen/padding_10dp"
                    android:text="@string/select_shift"
                    android:textColor="#2B1F2D"
                    android:textSize="@dimen/sixteen_sp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/mediumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/twentyDP"
                            android:background="@drawable/mark_duty_bg"
                            android:paddingLeft="@dimen/fifteen_dp"
                            android:paddingTop="10dp"
                            android:paddingRight="@dimen/fifteen_dp"
                            android:paddingBottom="10dp"
                            android:text="@string/select_shift_proceed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/twentyDP" />

                        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_10dp"
                            android:layout_marginTop="@dimen/fiveDp"
                            android:layout_marginRight="@dimen/margin_right_10dp"
                            app:cardCornerRadius="@dimen/ten_dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/ten_dp"
                                android:weightSum="3">


                                <TextView
                                    style="@style/mediumText"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:gravity="left"
                                    android:text="Shift A"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sixteen_sp" />


                                <TextView
                                    style="@style/lightText"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="10:00 A.M"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sixteen_sp" />


                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/shift_RV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.3"

                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/fifty_dp"
                    android:src="@drawable/icon_white_hand" />

                <TextView
                    style="@style/mediumText"
                    android:layout_width="188dp"
                    android:layout_height="49dp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/mark_duty_bg"
                    android:gravity="center"
                    android:text="@string/click_to_proceed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twentyDP" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/sixty_five_dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/mediumText"
            android:layout_width="124dp"
            android:layout_height="@dimen/thirty_five_dp"
        android:backgroundTint="@color/white"
          android:background="@drawable/next_button_purple_background"
            android:text="@string/Cancel"
            android:textAllCaps="true"
            android:textColor="@color/app_default_red_color"
            android:textSize="@dimen/tweelve_sp" />


        <androidx.appcompat.widget.AppCompatButton
            style="@style/mediumText"
            android:layout_width="124dp"
            android:layout_height="@dimen/thirty_five_dp"
            android:layout_marginLeft="@dimen/thirtyDp"
            android:background="@drawable/background_border_red_app_bg"
            android:text="@string/txt_proceed"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/tweelve_sp" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/fifty_dp"
        android:layout_marginBottom="@dimen/fifty_five_dp"
        android:src="@drawable/icon_white_hand" />

    <!--</FrameLayout>-->

    <include layout="@layout/layout_bottom_step" />


</RelativeLayout>