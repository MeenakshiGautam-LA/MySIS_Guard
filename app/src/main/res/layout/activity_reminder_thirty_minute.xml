<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reminder_thirtyMinute">


    <ImageView
        android:layout_width="@dimen/thirtyDP"
        android:layout_height="@dimen/thirtyDP"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/thirtyDP"
        android:layout_marginRight="@dimen/thirtyDP"
        android:src="@drawable/cancel_grey_color" />

    <ImageView
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/hundred_dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/thirtyDP"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirtyDP"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="07:30"
            android:textSize="56sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten_dp"
            android:gravity="center"
            android:text="AM"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/thirtyDP"
        android:text="Shift A"
        android:background="@color/gray"
        android:padding="@dimen/ten_dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/ten_dp"
        android:text="SBI Bank DLE UNT 1234"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/fiveDp"
        android:text="Maingate SS"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/fiveDp"
        android:text="08:00 AM"
        android:textSize="12sp" />


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/hundred_fifty_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fiftyDp"
        android:background="@android:color/white"
        app:cardCornerRadius="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:cardElevation="@dimen/ten_dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/holo_purple"
            android:text="SIGN IN"
            android:textColor="@android:color/white"
            android:textSize="14dp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>