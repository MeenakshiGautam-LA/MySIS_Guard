<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/threeDip"
    android:layout_marginTop="@dimen/threeDip"
    android:layout_marginRight="@dimen/threeDip"
    android:layout_marginBottom="@dimen/threeDip"
    app:cardCornerRadius="@dimen/five_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="@dimen/padding_10dp">

        <ImageView
            android:layout_width="@dimen/padding_left_38dp"
            android:layout_height="@dimen/padding_left_38dp"
            android:padding="@dimen/padding_5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_5dp">

            <TextView
                android:id="@+id/txt_notificationTilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Leave Request Accepted"
                android:textColor="#281F2D"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_40dp"
                android:text="Leave requested for 4 Mar 20 for bank work is accepted by Area manager"
                android:textColor="#695C70"
                android:textSize="@dimen/txt_size_12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:padding="@dimen/padding_5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:padding="@dimen/padding_5dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
