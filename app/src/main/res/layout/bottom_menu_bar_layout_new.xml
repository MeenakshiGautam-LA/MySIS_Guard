<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_help_screen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dp"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/dutyMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/duty_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_duty"

                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/calenderMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/calendar_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_calendar"

                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/profile_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_profile"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dp"
        android:weightSum="3">


        <!-- <LinearLayout
               android:id="@+id/salaryMenuLinear"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:visibility="gone"
               android:orientation="vertical">

               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_width="@dimen/twenty_fourDp"
                   android:layout_height="@dimen/twenty_fourDp"
                   android:src="@drawable/icon_salary" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/five_dp"
                   android:text="Salary"
                   android:textAllCaps="true"
                   android:textColor="@color/app_default_color"
                   android:textSize="@dimen/ten_sp"
                   android:textStyle="bold" />
           </LinearLayout>-->


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/icon_black_salary" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_salry"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/notification_black_icon"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_notification"

                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/icon_help" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_leaves"

                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dp"

        android:weightSum="3">


        <LinearLayout
            android:id="@+id/syncMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/refresh_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/txt_sync"

                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/sulabhLoanLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/twenty_fourDp"
                    android:layout_height="@dimen/twenty_fourDp"
                    android:src="@drawable/sulabh_loan_icon" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_horizontal|center"
                    android:layout_marginTop="2dp"

                    android:src="@drawable/icon_rupee_symbol"

                    />


            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/sulabh_loan"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/akrLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/akr_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/akr"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/akrMenuLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"
                android:src="@drawable/dress_due" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="AKR"
                android:textAllCaps="true"
                android:textColor="@color/app_default_color"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen_dp"
        android:weightSum="3">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/twenty_fourDp"
                    android:layout_height="@dimen/twenty_fourDp"
                    android:src="@drawable/help_bg" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center"
                    android:src="@drawable/help_icon" />


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/help"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/checkUpdateLY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/twenty_fourDp"
                android:layout_height="@dimen/twenty_fourDp"

                android:src="@drawable/lang_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="@dimen/ten_sp"
                android:textStyle="bold" />
        </LinearLayout>


        <!-- <LinearLayout
               android:id="@+id/checkUpdateLY"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="vertical">

               <androidx.appcompat.widget.AppCompatImageView
                   android:layout_width="@dimen/twenty_fourDp"
                   android:layout_height="@dimen/twenty_fourDp"
                   android:src="@drawable/icon_sync" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/five_dp"
                   android:text="@string/help"
                   android:textColor="@color/app_default_color"
                   android:textSize="@dimen/ten_sp"
                   android:textStyle="bold" />
           </LinearLayout>-->


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"

        android:text="App Version"

        android:textColor="@color/light_grey_txt_color" />


    <TextView
        android:id="@+id/app_version_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="10.0.0"
        android:textColor="@color/light_grey_txt_color" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#20333333" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="30dp"
       android:paddingBottom="30dp" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textColor="@color/light_grey_txt_color"/>


        <ToggleButton
            android:id="@+id/toggle_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/toggle_selector"
            android:drawableLeft="@drawable/toggle_icon"
            android:paddingLeft="10dp"
            android:checked="true"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>


</LinearLayout>
