<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2DDE6"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/icon_security_guard_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/icon_security_guard_one"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/security_guard_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ramesh Singh"
                android:textColor="#281F2D"
                android:textSize="@dimen/txt_size_14sp"/>


            <TextView
                android:id="@+id/security_guard_name_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security_guard_name_txt"
                android:text="Guard SO"
                android:textColor="#281F2D"
                android:textSize="@dimen/txt_size_14sp" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_cross"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/icon_cross"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="68dp"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            android:background="@drawable/dotted_line_vertical"/>


        <TextView
            android:id="@+id/security_guard_name_txt_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.7"
            android:text="Axis Bank DLE UNT 12345"
            android:textColor="#281F2D"
            android:textSize="14dp"
            android:visibility="invisible" />


        <ImageView
            android:id="@+id/icon_cross_second"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/icon_cross"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <ImageView
            android:id="@+id/google_map_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/icon_security_guard_one" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/security_guard_name_txt_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Axis Bank DLE UNT 12345"
                android:textColor="#281F2D"
                android:textSize="@dimen/txt_size_14sp" />


            <TextView
                android:id="@+id/security_guard_name_txt_forth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security_guard_name_txt_third"
                android:layout_marginTop="10dp"
                android:text="Post"
                android:textColor="#A799B7"
                android:textSize="@dimen/txt_size_14sp" />


            <TextView
                android:id="@+id/security_guard_name_txt_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security_guard_name_txt_third"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/security_guard_name_txt_forth"
                android:text="Main Gate"
                android:textColor="#695C70"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                android:id="@+id/security_guard_name_post_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security_guard_name_txt_third"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/security_guard_name_txt_fifth"
                android:text="Post Rank"
                android:textColor="#A799B7"
                android:textSize="@dimen/txt_size_14sp" />

            <TextView
                android:id="@+id/security_guard_name_post_rank_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security_guard_name_txt_third"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/security_guard_name_post_rank"
                android:text="SO"
                android:textColor="#695C70"
                android:textSize="@dimen/txt_size_14sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.2"
            android:background="#FCFAC3"
            android:padding="5dp"
            android:text="Shift A"
            android:textColor="#4C2170" />


    </LinearLayout>
















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/retake_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/retake_btn_bg"
            android:text="Retake"
            android:textColor="#4C2170"
            android:textSize="@dimen/txt_size_14sp" />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_border_app_bg"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_14sp" />


    </LinearLayout>

</LinearLayout>
