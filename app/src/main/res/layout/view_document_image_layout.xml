<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@android:color/transparent"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cancelImg"
        android:layout_width="@dimen/thirtyDp"
        android:layout_height="@dimen/thirtyDp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/fifty_dp"
        android:layout_marginRight="@dimen/thirtyDp"
        android:src="@drawable/cancel_grey_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/document_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_accounty_card_view"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/tenDip"
            android:layout_marginRight="@dimen/tenDip"
            android:background="@color/white"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/tenDip"
            app:cardElevation="@dimen/twentyDip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="@dimen/thirtyDp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hundred_fifty_dp"
                    android:src="@drawable/sis_logo"
                    android:scaleType="centerCrop"
                    android:id="@+id/document_img_view"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>