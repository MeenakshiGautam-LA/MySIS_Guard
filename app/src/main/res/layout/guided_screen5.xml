<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white_background"
            app:contentPadding="@dimen/five_dp">

            <LinearLayout
                android:id="@+id/topLinearView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/twentyDip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dp"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userImageCV"
                            android:layout_width="@dimen/fourtyDp"
                            android:layout_height="@dimen/fourtyDp"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:src="@drawable/profile_img"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="@dimen/two_dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="@dimen/ten_dp"
                                android:background="@color/text_color_hint" />

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="@dimen/ten_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@color/text_color_hint" />

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="@dimen/ten_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@color/black" />

                            <View
                                android:layout_width="@dimen/two_dp"
                                android:layout_height="@dimen/ten_dp"
                                android:layout_marginTop="@dimen/five_dp"
                                android:background="@color/text_color_hint" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/fourtyDp"
                            android:layout_height="@dimen/fourtyDp"
                            android:layout_marginLeft="@dimen/ten_dp"
                            android:src="@mipmap/location"
                            android:tint="@color/app_default_red_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:layout_marginTop="@dimen/five_dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="0.3"
                                android:gravity="left"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/userNameTV"
                                    style="@style/mediumText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ramesh_singh"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fortten_sp" />

                                <TextView
                                    android:id="@+id/postRankNameTV"
                                    style="@style/lightText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/threeDip"
                                    android:text="@string/guard_so"
                                    android:textColor="#494949"
                                    android:textSize="@dimen/twelve_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/ten_dp"
                                android:layout_weight="0.7"
                                android:gravity="right"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/cancelBtn"
                                    android:layout_width="@dimen/twentyFiveDip"
                                    android:layout_height="@dimen/twentyFiveDip"
                                    android:src="@drawable/cancel_grey_color"
                                    android:tint="@color/light_grey_txt_color" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/fourty_five_dp"

                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/unitNameTV"
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:maxLines="2"
                                android:text="@string/axis_bank"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fortten_sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/postNameTV"
                                style="@style/lightText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/post_tv"
                                android:textColor="#494949"
                                android:textSize="@dimen/twelve_sp" />


                            <TextView
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="@string/main_gate_tv"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve_sp" />


                            <TextView
                                android:id="@+id/postRankTV"
                                style="@style/lightText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/tenDip"
                                android:text="@string/post_rank_tv"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve_sp" />

                            <TextView
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text="@string/so_tv"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve_sp" />


                            <TextView
                                style="@style/mediumText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/fourty_dp"
                                android:background="#CAF5DD"
                                android:gravity="right"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="5dp"
                                android:text="@string/shiftb_name"
                                android:textColor="#119A4D"
                                android:textSize="@dimen/twelve_sp"

                                />


                        </LinearLayout>

                        <!--   <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <TextView
                                   style="@style/regularText"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="#CAF5DD"
                                   android:paddingLeft="10dp"
                                   android:paddingTop="5dp"
                                   android:paddingBottom="5dp"
                                   android:text="@string/shift_name"
                                   android:textColor="#119A4D"
                                   android:textSize="@dimen/twelve_sp" />

                               <TextView
                                   android:id="@+id/shiftNameTV"
                                   style="@style/mediumText"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:background="#CAF5DD"
                                   android:maxLines="2"
                                   android:paddingTop="5dp"
                                   android:paddingRight="10dp"
                                   android:paddingBottom="5dp"
                                   android:textColor="#119A4D"
                                   android:textSize="@dimen/twelve_sp" />
                           </LinearLayout>-->

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="0.6"
                android:paddingTop="180dp"
                android:src="@drawable/guard_icon1" />

            <TextView
                android:id="@+id/great_did_tv"
                style="@style/mediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewCaptureImageIV"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/ten_dp"
                android:background="@drawable/mark_duty_bg"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="@string/submit_to_mark_atte"
                android:textColor="@color/white"
                android:textSize="@dimen/twentyDP" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/great_did_tv"
                android:layout_marginBottom="@dimen/fifty_dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/retake_TV"
                    style="@style/regularText"
                    android:layout_width="124dp"
                    android:layout_height="34dp"
                    android:background="@drawable/border_with_blanck_button_bg"
                    android:backgroundTint="#60FFFFFF"
                    android:gravity="center"
                    android:paddingLeft="@dimen/twentyFiveDip"
                    android:paddingRight="@dimen/twentyFiveDip"
                    android:text="@string/retake"
                    android:textColor="@color/dark_red"
                    android:textSize="@dimen/fortten_sp" />

                <TextView
                    android:id="@+id/submit_TV"
                    style="@style/regularText"
                    android:layout_width="124dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="@dimen/twentyDP"
                    android:layout_toRightOf="@id/retake_TV"
                    android:background="@drawable/background_border_red_app_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/twentyFiveDip"
                    android:paddingRight="@dimen/twentyFiveDip"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fortten_sp" />

                <ImageView
                    android:id="@+id/icon_white_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/submit_TV"
                    android:layout_alignBaseline="@id/submit_TV"
                    android:layout_toRightOf="@id/submit_TV"
                    android:src="@drawable/icon_white_hand" />


            </RelativeLayout>


        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/transparent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mark_atten_op_bg"
        android:gravity="bottom">


        <ImageView
            android:id="@+id/viewcapture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alpha="0.6"

            android:paddingTop="180dp"
            android:src="@drawable/guard_icon1" />

        <TextView
            android:id="@+id/great"
            style="@style/mediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/viewcapture"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@drawable/mark_duty_bg"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/submit_to_mark_atte"
            android:textColor="@color/white"
            android:textSize="@dimen/twentyDP" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/great"
            android:layout_marginBottom="@dimen/fifty_dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/retake"
                style="@style/regularText"
                android:layout_width="124dp"
                android:layout_height="34dp"
                android:background="@drawable/border_with_blanck_button_bg"
                android:backgroundTint="#60FFFFFF"
                android:gravity="center"
                android:paddingLeft="@dimen/twentyFiveDip"
                android:paddingRight="@dimen/twentyFiveDip"
                android:text="@string/retake"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/fortten_sp" />

            <TextView
                android:id="@+id/submit"
                style="@style/regularText"
                android:layout_width="124dp"
                android:layout_height="34dp"
                android:layout_marginLeft="@dimen/twentyDP"
                android:layout_toRightOf="@id/retake"
                android:background="@drawable/background_border_red_app_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/twentyFiveDip"
                android:paddingRight="@dimen/twentyFiveDip"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/fortten_sp" />

            <ImageView
                android:id="@+id/icon_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/submit"
                android:layout_alignBaseline="@id/submit"
                android:layout_toRightOf="@id/submit"
                android:src="@drawable/icon_white_hand" />


        </RelativeLayout>


    </RelativeLayout>


    <include layout="@layout/layout_bottom_step" />

</RelativeLayout>