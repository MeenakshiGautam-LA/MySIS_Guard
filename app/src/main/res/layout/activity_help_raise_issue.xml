<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E2DDE6"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_back_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_back_arrow"
            android:text="Raise Grievance"
            android:textColor="#695C70"
            android:layout_marginLeft="10dp" />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon_back_arrow"
        android:text="Salary"
        android:textColor="#281F2D"
        android:layout_marginLeft="10dp"
        android:textSize="22dp"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rectangular_relative_bg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select an Issue"
            android:textColor="#281F2D"
            android:padding="15dp" />

        <RadioGroup
            android:layout_marginTop="50dp"
            android:id="@+id/groupradio"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- In RadioGroup create the 1 Radio Button-->
            <!-- like this we will add some more Radio Button-->
            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id1"
                android:text="Did not Receive Salary"
                android:textSize="15dp"
                android:textColor="#695C70"
                android:padding="8dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id2"
                android:text="Received Less Salary"
                android:textSize="15dp"
                android:textColor="#695C70"
                android:padding="8dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id3"
                android:text="Did not Receive Salary"
                android:textSize="15dp"
                android:textColor="#695C70"
                android:padding="8dp" />

            <RadioButton
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id4"
                android:text="Received Less Salary"
                android:textSize="15dp"
                android:textColor="#695C70"
                android:padding="8dp" />
        </RadioGroup>

        <!-- add button For Submit the Selected item-->


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingBottom="30dp"
        android:background="@drawable/rectangular_relative_bg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grievance Description"
            android:textColor="#A799B7"
            android:padding="10dp" />


        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your message here"
            android:textSize="12dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="8dp"
            android:textColorHint="#A799B7"
           />


    </RelativeLayout>

<Button
    android:id="@+id/btn_raise_grievance"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="Raise Grievance"
    android:textColor="#A799B7"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/raise_grievance_btn_bg"
   android:layout_marginLeft="20dp" />




</LinearLayout>
