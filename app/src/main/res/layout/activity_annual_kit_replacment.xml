<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnnualKitReplacmentActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/twentyDP"
        android:layout_marginRight="@dimen/ten_dp"
        android:background="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/ten_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/twentyDP"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/fiftyDp"
                    android:layout_height="@dimen/fourty_twoDp"
                    android:layout_gravity="center"
                    android:src="@drawable/new_dress"
                    android:layout_marginTop="@dimen/twentyDP"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twentyDP"
                    android:text="@string/new_kit_due"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:text="Jan 2021"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/twentyDP"
                android:layout_marginBottom="@dimen/twentyDP"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/twentyDP"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/fiftyDp"
                    android:layout_height="@dimen/fourty_twoDp"
                    android:layout_gravity="center"
                    android:src="@drawable/old_dress"
                    android:layout_marginTop="@dimen/twentyDP"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twentyDP"
                    android:text="@string/kit_recieve"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:text="Jan 2020"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/twentyDP"
        android:layout_marginLeft="@dimen/ten_dp"
        android:text="Jan 2020"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten_dp"
        android:layout_marginTop="@dimen/twentyDP"
        android:layout_marginRight="@dimen/ten_dp"
        android:background="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="@dimen/ten_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fourtyDp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/fifty_sixDp"
                android:layout_height="@dimen/fifty_sixDp"
                android:layout_gravity="center"
                android:src="@drawable/dress_receive"
                android:layout_marginTop="@dimen/twentyDP"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twentyDP"
                android:text="@string/no_logo_submited"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fiveDp"
                android:text="@string/submit_logo"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fourtyDp"
                android:id="@+id/howToSubmit"
                android:text="@string/how_to_submit"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>