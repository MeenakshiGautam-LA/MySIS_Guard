<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/ten_dp">

        <TextView
            android:layout_width="@dimen/fifteen_dp"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_gravity="center"
            android:id="@+id/leaveColorTV"
            android:background="#00379a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifteen_dp"
            android:text="@string/sick_txt"
            android:id="@+id/leaveTypeNameTV"
            android:textColor="@color/text_color_heading"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>


</LinearLayout>