<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/day_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/threeDip"
    android:layout_marginBottom="@dimen/threeDip"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="@dimen/thirtyDp"
        android:layout_height="@dimen/thirtyDp">

        <TextView
            android:id="@+id/rv_day_tv"
            style="@style/regularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:text="16"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve_sp" />


        <TextView
            android:id="@+id/extra_duty_tv"
            style="@style/boldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/two_dp"
            android:layout_marginRight="@dimen/two_dp"
            android:text="+1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/eight_dp"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/approved_leave_IV"
            android:layout_width="@dimen/six_dp"
            android:layout_height="@dimen/six_dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/fiveDp"
            android:background="@drawable/circle_red_img"
            android:backgroundTint="@color/approved_leave"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/applied_leave_IV"
            android:layout_width="@dimen/six_dp"
            android:layout_height="@dimen/six_dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle_red_img"
            android:backgroundTint="@color/applied_leave"
            android:visibility="gone" />


    </FrameLayout>


</LinearLayout>