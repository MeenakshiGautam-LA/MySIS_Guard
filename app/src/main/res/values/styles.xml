    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/light_grey_txt_color</item>
        <item name="android:textSize">12sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/light_grey_txt_color</item>
        <item name="colorControlNormal">@color/light_grey_txt_color</item>
        <item name="colorControlActivated">@color/light_grey_txt_color</item>
    </style>

